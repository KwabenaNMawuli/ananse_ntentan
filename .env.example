# Ananse Ntentan - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# =================================
# SERVER CONFIGURATION
# =================================
PORT=5000
NODE_ENV=development

# =================================
# DATABASE
# =================================
# MongoDB Connection String
# Local: mongodb://localhost:27017/ananse_ntentan
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/ananse_ntentan
MONGODB_URI=mongodb://localhost:27017/ananse_ntentan

# Test Database (used during testing)
MONGODB_URI_TEST=mongodb://localhost:27017/ananse_ntentan_test

# =================================
# AUTHENTICATION
# =================================
# Generate secure secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# =================================
# FILE UPLOAD & STORAGE
# =================================
# Local file storage path
UPLOAD_PATH=./uploads

# Maximum file size in bytes (10MB = 10485760)
MAX_FILE_SIZE=10485760

# Allowed file types (comma-separated MIME types)
ALLOWED_FILE_TYPES=image/png,image/jpeg,image/jpg,audio/mpeg,audio/wav,audio/mp3

# =================================
# CLOUDINARY (Optional - for cloud storage)
# =================================
# Sign up at https://cloudinary.com
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# =================================
# CORS CONFIGURATION
# =================================
# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Production frontend URL (when deployed)
FRONTEND_URL_PRODUCTION=https://your-production-domain.com

# =================================
# RATE LIMITING
# =================================
# Rate limit window in minutes
RATE_LIMIT_WINDOW=15

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# =================================
# EMAIL SERVICE (Optional - for notifications)
# =================================
# Using SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@ananse-ntentan.com
FROM_NAME=Ananse Ntentan

# Or using SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# =================================
# RAG SYSTEM & LLM (CRITICAL)
# =================================

# Google Gemini (Hackathon Access) ‚≠ê PRIMARY LLM
GEMINI_API_KEY=your_gemini_api_key_from_hackathon
GEMINI_MODEL=gemini-3-pro
GEMINI_FLASH_MODEL=gemini-1.5-flash-latest
GEMINI_EMBEDDING_MODEL=text-embedding-004

# Gemini Generation Parameters
GEMINI_TEMPERATURE=0.9
GEMINI_MAX_TOKENS=8192
GEMINI_TOP_P=0.95
GEMINI_TOP_K=40
GEMINI_SAFETY_SETTINGS=BLOCK_ONLY_HIGH

# Hackathon Quota Management
HACKATHON_CREDITS_AVAILABLE=true
MAX_REQUESTS_PER_DAY=10000
MAX_REQUESTS_PER_USER=100
ENABLE_USAGE_ALERTS=true
FALLBACK_TO_FLASH=true

# Vector Database (Choose one)
# Option 1: Pinecone (Easiest, managed)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=ananse-ntentan-embeddings

# Option 2: Qdrant (Self-hosted or cloud)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key
QDRANT_COLLECTION_NAME=ananse_transmissions

# RAG Configuration
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7
RAG_CONTEXT_MAX_TOKENS=10000
RAG_ENABLE_HYBRID_SEARCH=true

# Embedding Configuration
EMBEDDING_DIMENSION=768
EMBEDDING_BATCH_SIZE=100
EMBEDDING_CACHE_TTL=3600

# Multimodal Processing (Gemini Native)
ENABLE_AUDIO_PROCESSING=true
ENABLE_IMAGE_UNDERSTANDING=true
GEMINI_MULTIMODAL_MODEL=gemini-3-pro

# =================================
# EXTERNAL APIs (Optional)
# =================================
# OpenAI API (Backup/Fallback only)
OPENAI_API_KEY=your_openai_api_key
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# AWS S3 (if using S3 for storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=ananse-ntentan-uploads

# =================================
# LOGGING & MONITORING
# =================================
# Sentry DSN (for error tracking)
SENTRY_DSN=your_sentry_dsn

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Gemini Usage Monitoring
LOG_GEMINI_REQUESTS=true
LOG_GEMINI_TOKENS=true
LOG_GEMINI_COSTS=true

# =================================
# REDIS (Optional - for caching/sessions)
# =================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =================================
# DEVELOPMENT & TESTING
# =================================
# Enable debug mode
DEBUG=false

# Seed database with test data
SEED_DATABASE=false

# =================================
# IMAGE GENERATION (NEW)
# =================================
# Enable/disable image generation for story panels
ENABLE_IMAGE_GENERATION=false

# Image provider: gemini-image, stability, or imagen
IMAGE_PROVIDER=gemini-image

# Gemini Image models (Nano Banana / Nano Banana Pro)
# Uses GEMINI_API_KEY from above
GEMINI_IMAGE_MODEL=gemini-2.5-flash-image
GEMINI_IMAGE_ASPECT_RATIO=1:1

# Optional: Use a different model for video frame generation
VIDEO_IMAGE_MODEL=gemini-3-pro-image-preview

# Probability of generating a video per story (0.0 - 1.0)
VIDEO_GENERATION_PROBABILITY=0.2

# Stability AI (PAID service)
# Sign up at https://platform.stability.ai/
# Pricing: ~$0.01-0.03 per image
STABILITY_API_KEY=sk-your_stability_key_here
STABILITY_ENGINE=stable-diffusion-xl-1024-v1-0

# Google Imagen 3 (FUTURE - via Vertex AI)
# Requires Vertex AI setup
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
IMAGEN_MODEL=imagen-3.0-generate-001

# =================================
# VIDEO GENERATION (NEW)
# =================================
# Enable/disable video generation from story panels
ENABLE_VIDEO_GENERATION=false

# FFmpeg is required for video generation
# Windows: Download from https://ffmpeg.org/download.html
# macOS: brew install ffmpeg
# Linux: sudo apt-get install ffmpeg

# Default video style: motion-comic, slideshow, animated-storyboard, documentary, dynamic
DEFAULT_VIDEO_STYLE=motion-comic

# =================================
